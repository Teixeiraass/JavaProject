
import java.util.*;

public class VontadeDeMeMatar {

	public static void main(String[] args) {
			
		Scanner ler = new Scanner(System.in);
		
		int num;
		num = 7;
		
		int cont = 0;
		
			for(int i = num;i >= 1; i-- ) {
				for(int a = cont; a <= num; a++) {
					System.out.print("*");
				}
				System.out.print("\n");
				cont ++;
				num--;
			}
	}

}
