
import java.util.*;

public class VontadeDeMeMatar {

	public static void main(String[] args) {
			
		Scanner ler = new Scanner(System.in);
		
		int num;
		num = 1;
		
		int cont = 7;
		
			for(int i = num;i >= 0; i-- ) {
				for(int a = num; a <= cont; a++) {
					System.out.print("*");
				}
				System.out.print("\n");
				num--;
			}
	}

}
